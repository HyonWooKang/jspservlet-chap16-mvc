<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>chap16-mvc-lecture-source</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 전체에서 사용할 경로들을 여기로 빼서 한 번에 관리한다 -->
  
  <!-- 시작할 때 연결 설정 -->
  <context-param>
  	<param-name>connection-info</param-name>
  	<param-value>/WEB-INF/config/connection-info.properties</param-value>
  </context-param>
  
  <context-param>
  	<param-name>mapper-location</param-name>
  	<param-value>/WEB-INF/mapper/</param-value>
  </context-param>
</web-app>